# Database Configuration
DB_HOST=localhost
DB_NAME=student_time_advisor
DB_USER=root
DB_PASS=

# Application Configuration
APP_URL=http://localhost/student-time-advisor-php/public

# Mail Configuration (for reminders)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=Student Time Advisor

# Alternative Mail Services
# For Outlook/Hotmail:
# MAIL_HOST=smtp-mail.outlook.com
# MAIL_PORT=587

# For Yahoo:
# MAIL_HOST=smtp.mail.yahoo.com
# MAIL_PORT=587

# For custom SMTP:
# MAIL_HOST=your-smtp-server.com
# MAIL_PORT=587

# Security Settings
SESSION_SECRET=your-random-session-secret-here
CSRF_SECRET=your-random-csrf-secret-here

# Time Zone (optional, defaults to server timezone)
TIMEZONE=UTC

# Debug Mode (set to false in production)
DEBUG=true

# Log Settings
LOG_LEVEL=info
LOG_FILE=/var/log/student_time_advisor.log

# Cron Job Settings
CRON_REMINDER_INTERVAL=15
CRON_STREAK_TIME=00:10
